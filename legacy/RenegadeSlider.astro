---
import Front1 from "../assets/renegade/front1.webp";
import Front2 from "../assets/renegade/front2.webp";
import Front3 from "../assets/renegade/front3.webp";
import FrontAxo from "../assets/renegade/front_axo.webp";
import Magnet from "../assets/renegade/magnet.webp";
---

<div class="slideshow-container">
  <div class="holder">
    <div class="mySlides fade">
      <img
        src={Front3.src}
        class="slide-img"
        alt="Zavážacia loďka Renegade"
      />
    </div>
  
    <div class="mySlides fade" style="z-index: -5;">
      <img
        src={Front1.src}
        class="slide-img"
        alt="Zavážacia loďka Renegade"
      />
    </div>
  
    <div class="mySlides fade" style="z-index: -5;">
      <img
        src={Front2.src}
        class="slide-img"
        alt="Zavážacia loďka Renegade"
      />
    </div>
  
    <div class="mySlides fade" style="z-index: -5;">
      <img
        src={FrontAxo.src}
        class="slide-img"
        alt="Zavážacia loďka Renegade"
      />
    </div>

    <div class="mySlides fade" style="z-index: -5;">
      <img
        src={Magnet.src}
        class="slide-img"
        alt="Zavážacia loďka Renegade"
      />
    </div>
  </div>
  
  <span id="prev">❮</span>
  <span id="next">❯</span>
</div>
  


<script>
let slides = document.getElementsByClassName("mySlides");
let current_slide = 1;
let max_slides = slides.length;

document.getElementById("prev")?.addEventListener("click", () => {
  if (current_slide == 1) {
    current_slide = max_slides;
  } else {
    current_slide--;
  }

  render();
})

document.getElementById("next")?.addEventListener("click", () => {
  if (current_slide == max_slides) {
    current_slide = 1;
  } else {
    current_slide++;
  }

  render();
})

function render() {
  for (let i = 0; i < max_slides; i++) {
    slides[i].style.zIndex = -5;
  }

  slides[current_slide - 1].style.zIndex = 1;
}
</script>

<style>
  /* Slideshow container */
.slideshow-container {
  /* flex-grow: 1; */
  /* flex-basis: 50%; */
  position: relative;
}

.mySlides {
  position: absolute;
  top: 50%; 
  left: 50%; 
  transform: translate(-50%, -50%);
}

.slide-img {
  width: auto;
